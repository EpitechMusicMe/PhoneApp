<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item></style>

    <style name="BluetoothStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:itemPadding">20dp</item>
        <item name="android:background">@color/colorBluetooth</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Mood_ButtonStyle" parent="@style/Widget.AppCompat.Button.Colored">
