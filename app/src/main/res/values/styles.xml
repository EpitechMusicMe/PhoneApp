<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="IntroTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/intro_image</item>
    </style>

    <style name="BluetoothStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:itemPadding">20dp</item>
        <item name="android:background">@color/colorBluetooth</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Mood_ButtonStyle" parent="@style/Widget.AppCompat.Button.Colored">
     <item name="android:textColor">#FFFFFF</item>
     <item name="android:textSize">15sp</item>
     <item name="android:textStyle">bold</item>
      <item name="android:itemPadding">20dp</item>
        <item name="android:background">@color/colorHappy</item>
    <item name="android:gravity">center</item>
    </style>

    <style name="ButtonStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:itemPadding">20dp</item>
        <item name="android:background">@color/colorGlobalMenu</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RemotePlayerTheme" parent="AppTheme">
        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@android:color/transparent
        </item>
        <item name="android:windowBackground">@drawable/window_background</item>
<!--        <item name="android:windowBackground">@drawable/bg_launcher</item>-->
    </style>

</resources>
