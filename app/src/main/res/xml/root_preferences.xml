<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/messages_header">

        <EditTextPreference
            app:key="signature"
            app:title="@string/signature_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="reply"
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:key="reply"
            app:title="@string/reply_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/sync_header">

        <SwitchPreferenceCompat
            app:key="sync"
            app:title="@string/sync_title" />

        <SwitchPreferenceCompat
            app:dependency="sync"
            app:key="attachment"
            app:summaryOff="@string/attachment_summary_off"
            app:summaryOn="@string/attachment_summary_on"
            app:title="@string/attachment_title" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Integration">

        <Preference
            app:key="bluetooth"
            app:title="Bluetooth"
            app:summary="Bluetooth connect to a wearable" />

        <Preference
            app:key="spotify"
            app:title="Spotify"
            app:summary="Authenticate with a Spotify account"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="Account">

        <Preference
            app:key="delete"
            app:title="Delete"
            app:summary="Delete all mood and music history"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="Privacy">

        <SwitchPreferenceCompat
            app:key="telemetry"
            app:title="Send telemetry"
            app:summary="Send optional telemetry data to our private servers (see privacy policy)" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Info">

        <Preference
            app:key="faq"
            app:title="FAQ"
            app:summary="Frequently asked questions and app guide" />

        <Preference
            app:key="about"
            app:title="About Us" />

    </PreferenceCategory>

</PreferenceScreen>
