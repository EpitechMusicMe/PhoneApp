<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/integration_header">

        <Preference
            app:key="bluetooth"
            app:title="@string/bluetooth_title"
            app:summary="@string/bluetooth_summary" />

        <Preference
            app:key="spotify"
            app:title="@string/spotify_title"
            app:summary="@string/spotify_summary"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/account_header">

        <Preference
            app:key="delete"
            app:title="@string/delete_title"
            app:summary="@string/delete_summary"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/privacy_header">

        <SwitchPreferenceCompat
            app:key="telemetry"
            app:title="@string/telemetry_title"
            app:summary="@string/telemetry_summary" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/info_header">

        <Preference
            app:key="faq"
            app:title="@string/faq_title"
            app:summary="@string/faq_summary" />

        <Preference
            app:key="about"
            app:title="@string/about_title" />

    </PreferenceCategory>

</PreferenceScreen>
